<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Common attributes -->

    <attr name="pBrand" format="enum">
        <enum name="primary" value="0"/>
        <enum name="success" value="1"/>
        <enum name="info" value="2"/>
        <enum name="warning" value="3"/>
        <enum name="danger" value="4"/>
        <enum name="regular" value="5"/>
        <enum name="secondary" value="6"/>
    </attr>

    <attr name="pSize" format="enum">
        <enum name="xs" value="0"/>
        <enum name="sm" value="1"/>
        <enum name="md" value="2"/>
        <enum name="lg" value="3"/>
        <enum name="xl" value="4"/>
    </attr>

    <!-- View attributes -->

    <declare-styleable name="StrippedProgressBar">
        <attr name="pStriped" format="boolean"/>
        <attr name="pAnimated" format="boolean"/>
        <attr name="pProgress" format="integer"/>
        <attr format="color" name="pProgressBgColor"/>
        <attr name="pLineSpacing" format="dimension"/>
        <attr name="pMaxProgress" format="integer"/>
        <attr name="pShowPercentage" format="boolean"/>
        <attr name="pRoundedCorners"/>
        <attr name="pBrand"/>
        <attr name="pSize"/>
    </declare-styleable>

    <declare-styleable name="StrippedProgressBarGroup">
        <attr name="pMaxProgress"/>
        <attr name="pSize"/>
        <attr name="pRoundedCorners"/>
    </declare-styleable>

</resources>
